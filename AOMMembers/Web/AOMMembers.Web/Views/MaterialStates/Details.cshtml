</p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @DataDisplayNames.AssetNameDisplayName
            </th>
            <th>
                @DataDisplayNames.AssetDescriptionDisplayName
            </th>
            <th>
                @DataDisplayNames.AssetWorthinessDisplayName
            </th>           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Assets) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
